body {
    font-family: 'Segoe UI', Arial, sans-serif;
    font-size: 13px;
    color: #222;
    background: #f7f9fa;
    margin: 0;
}
h1, h2, h3 { margin: 0 0 6px 0; font-weight: 500;}
.container { max-width: 1080px; margin: 12px auto; background: #fff; border-radius: 8px; box-shadow: 0 2px 8px #ccc3; padding: 12px 18px 20px 18px;}
header { border-bottom: 1px solid #e1e4e8; margin-bottom: 10px; }
.stats { display: flex; gap: 12px; margin-bottom: 10px; }
.stat-card { background: #f1f3f4; border-radius: 5px; padding: 8px 14px; text-align: center; min-width: 80px; font-size: 13px;}
.stat-card h3 { font-size: 11.5px; color: #666; margin-bottom: 2px;}
.stat-card span { font-size: 17px; font-weight: 600; color: #1976d2;}
main { margin-top: 6px; }
.main-panes { display: flex; gap: 18px; min-height: 400px;}
aside { width: 240px; min-width: 180px; background: #f5f7fa; border-radius: 6px; padding: 10px 9px 8px 9px; box-shadow: 0 1px 5px #eee; }
aside h2 { font-size: 15px; margin-bottom: 5px;}
.agent-list { display: flex; flex-direction: column; gap: 7px; }
.agent-card {
    background: #fff;
    border: 1px solid #e0e0e0;
    border-radius: 5px;
    padding: 7px 8px;
    font-size: 12px;
    margin-bottom: 2px;
    box-shadow: 0 1px 3px #f0f0f0;
    display: flex;
    flex-direction: column;
    gap: 2px;
    cursor: pointer;
    transition: background 0.13s;
}
.agent-card.selected { background: #e9f3ff; border-color: #90caf9; }
.agent-card .info { color: #555; font-size: 11px;}
.agent-card .agent-actions { display: flex; gap: 5px; margin-top: 3px;}
.btn-exfil {
    padding: 2px 10px;
    font-size: 11.5px;
    background: #e3eafc;
    border-radius: 3px;
    border: 1px solid #b6c7e3;
    color: #2350b2;
    cursor: pointer;
    margin-left: 0;
    transition: background 0.18s;
}
.btn-exfil:hover { background: #c9e0ff; }
.right-pane { flex: 1; background: #f7fafd; border-radius: 6px; padding: 15px 13px; min-width: 0;}
.tabs { display: flex; gap: 9px; margin-bottom: 11px;}
.tab-btn {
    background: #e3e6ea;
    border: none;
    border-radius: 4px 4px 0 0;
    padding: 5px 16px;
    cursor: pointer;
    font-size: 12px;
    font-weight: 500;
    color: #444;
    margin-bottom: -1px;
}
.tab-btn.active { background: #fff; color: #1976d2; border-bottom: 2px solid #1976d2;}
.tab-content { display: block; min-height: 210px; max-height: 56vh; overflow-y: auto; background: #fff; border-radius: 0 0 5px 5px; padding: 10px 12px 10px 12px; box-shadow: 0 1px 7px #f6f8fa;}
.log-entry, .exfil-entry {
    border-bottom: 1px solid #ececec;
    margin-bottom: 7px;
    padding-bottom: 4px;
    font-size: 12px;
    word-break: break-all;
}
.log-entry:last-child, .exfil-entry:last-child { border-bottom: none; }
.log-entry .time, .exfil-entry .time { color: #888; font-size: 11px;}
.exfil-entry .payload { background: #f9f9f9; border-radius: 3px; font-size: 11px; padding: 3px 5px; display: block; margin: 2px 0;}
.exfil-entry ul { margin: 2px 0 2px 15px; font-size: 11.5px;}
@media (max-width: 800px) {
    .main-panes { flex-direction: column; }
    aside, .right-pane { width: 100%; min-width: 0; }
}